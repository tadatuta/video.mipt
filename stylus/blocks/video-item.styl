.video-item
	background-color: white

	margin-bottom: 20px

	&__preview
		background: black

	&__text
		padding: 0 20px

	&_horizontal
		grid-col: 6

		.video-item__preview
			height: 91px
			width: 160px//$grid-sizes[2] + 2 * $grid-col-margin
			float: left

		.video-item__text
			box-sizing: border-box
			float: left
			width: 290px


	&_col_3
		grid-col: 3

		height:210px

		.video-item__preview
			height: 118px

	&_col_4
		grid-col: 4

		height:253px

		.video-item__preview
			height: 163px

