.menu
	width: 930px
	background-color: $color-blue

	&__item
		box-sizing: border-box
		display: inline-block
		list-style: none
		position: relative
		float: left

		text-transform: uppercase
		font-size: 13px
		font-weight: normal

		cursor: pointer
		background-color: $color-blue

		margin-left: 60px
		padding: 18px 10px

		&:first-of-type
			margin: 0

		&:hover
			background: rgba(white, 0.2)

		&_cloud
			position: relative

			&:before
				display: inline-block
				width: 24px
				height: 15px
				content: ''

				background: url(/img/icon-cloud.png) no-repeat center

				margin-bottom: -5px
				margin-right: 21px



