.menu
	width: 930px
	background-color: $color-blue

	&__item
		box-sizing: border-box
		display: inline-block
		list-style: none
		position: relative
		float: left

		text-transform: uppercase
		font-size: 13px
		font-weight: normal

		cursor: pointer

		margin-left: 80px
		padding: 18px 0

		&:first-of-type
			margin: 0

		&_cloud
			position: relative
			margin-left: 116px

			&:before
				display: inline-block
				width: 24px
				height: 15px
				content: ''
				absolute: left -36px

				background: url(/img/icon-cloud.png) no-repeat center



