.popular-video
	grid-row()

	margin-top: 10px
	margin-bottom: 10px

	&__header
		grid-col: 12
		color: $color-blue

		font-size: 21px
		font-weight: 200

		margin-bottom: 10px

		&:before
			display: inline-block
			content: ''
			height: 25px
			width: 25px

			background: url(/img/icon-star.png) no-repeat 0px 5px

			margin-right: 13px

	&__item
		grid-col: 3

		height:210px

		background: white

		margin-bottom: 20px

		&__preview
			height: 118px

			background: black

		&__header
			color: black

			font-size: 14px
			font-weight:bold

			margin: 10px 20px 0

		&__date
			color: #b0b1b3

			margin: 10px 20px 0

			font-size: 12px

