.title
	color: white

	&_size_l
		font-size: (24/13)rem
		font-weight: 100

		margin: 24px 0
	&_size_m
		font-size: (21/13)rem
		font-weight: 300

		margin: 10px 0

	&_size_s
		font-size: (14/13)rem
		font-weight:bold

		margin: 10px 0

	&_color_blue
		color: $color-blue

	&_color_black
		color: black

	&_col_12
		col(1)

	&_icon_star
		&:before
			make-icon()
			content:'\e803'

	&_icon_clock
		&:before
			make-icon()
			content: '\e804'
