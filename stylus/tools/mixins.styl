/*
 * Size in grid
 */
grid-row()
	max-width 960px
	margin: 0 auto

	clearfix()

grid-col(n, is-procent=false, float=left, margin=$grid-col-margin)
	if n <= 12
		margin-procent = (margin / 960 * 100) %
		if is-procent
			width: $grid-sizes-procent[n]
			margin-left: margin-procent
			margin-right: margin-procent
		else
			width: grid-sizes[n]
			margin-left: margin
			margin-right: margin


		float: float

	else
		background: red
