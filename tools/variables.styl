@import 'jeet'
@import 'rupture'

// Colors
// -------------------

$color-blue = #0069b3
$color-date = #b0b1b3
$color-main = white
$color-header = black

$color-background = white

// Fonts
// -------------------

$font-main = "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
$font-icon = 'icons-mipt-video'


// Grid
// -------------------

$grid-gutter = 3%
$grid-amound-of-cols = 12
$grid-col-margin = 15px
$grid-width = 930px

// Jeet
// -------------------

jeet = {
  gutter: 3,
  parent-first: false,
  layout-direction: LTR,
  max-width: 930px
}


// Rupture
// -------------------

rupture.scale = 0 400px 600px 800px
rupture.scale-names = 'xs' 's' 'm'
