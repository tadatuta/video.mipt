
block('banner')(
	match(function(){ return this.ctx.header && this.ctx.text; })(
		content()(function(){
			return {
				elem: 'wrapper',
				content: [
					{
						block: 'title',
						mods: { level: '1'},
						mix: { block: 'banner', elem: 'title'},
						content: this.ctx.header
					},
					{
						tag: 'p',
						block: 'text',
						content: this.ctx.text
					}
				]
			}
		})
	)
)
