block('slider')(
	match(function(){ return this.ctx.header && this.ctx.text; })(
		content()(function(){
			return {
				elem: 'content',
				content: [
					{
						block: 'title',
						mods: { level: '1'},
						mix: { block: 'slider', elem: 'title'},
						content: this.ctx.header
					},
					{
						tag: 'p',
						block: 'text',
						content: this.ctx.text
					}
				]
			}
		})
	)
)
