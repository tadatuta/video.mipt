block('slider')(
	js()(true),
	elem('item')(
		js()(function() {
			return {
				url: this.ctx.url
			}
		}),
		content()(function() {
			return {
				elem: 'content',
				content: [
					{
						block: 'title',
						mods: { level: '1' },
						mix: { block: 'slider', elem: 'title' },
						content: this.ctx.header
					},
					{
						tag: 'p',
						block: 'text',
						content: this.ctx.text
					}
				]
			}
		})
	)
);

